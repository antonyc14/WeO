<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order id"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/admin_order_id"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seller phone"
            android:layout_below="@id/admin_order_id"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/admin_seller_phone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User phone"
            android:layout_below="@id/admin_seller_phone"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/admin_user_phone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="status : "
            android:layout_marginTop="4dp"
            android:layout_below="@id/admin_user_phone"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:id="@+id/admin_order_status"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>