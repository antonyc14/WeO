<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="User Name"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Phone Number"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Total price"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_below="@+id/order_phone_number"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Date time"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_below="@+id/order_total_price"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/show_booking_btn"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/order_date_time"
            android:text="Show Booking"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:background="@color/white"
            android:backgroundTint="@null"
            ></Button>

    </RelativeLayout>

</RelativeLayout>