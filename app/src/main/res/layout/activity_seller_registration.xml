<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seller.SellerRegistrationActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/img_seller"
        android:src="@drawable/wedding_registration"
        />

    <TextView
        android:id="@+id/seller_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Organizer Registration Form"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_below="@id/img_seller"
        android:layout_margin="20dp"
        android:textStyle="bold"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seller_name"
        android:layout_marginHorizontal="15dp"
        android:layout_below="@+id/seller_title"
        android:hint="Input your organization name"
        android:inputType="text"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seller_email"
        android:layout_marginHorizontal="15dp"
        android:layout_below="@+id/seller_phone"
        android:hint="Input your email"
        android:inputType="textEmailAddress"
        android:textSize="16dp"
        android:layout_marginTop="10dp"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seller_phone"
        android:layout_marginHorizontal="15dp"
        android:layout_below="@+id/seller_name"
        android:hint="Input your phone number"
        android:inputType="phone"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seller_password"
        android:layout_marginHorizontal="15dp"
        android:layout_below="@+id/seller_email"
        android:hint="Input your password"
        android:inputType="text"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seller_address"
        android:layout_marginHorizontal="15dp"
        android:layout_below="@+id/seller_password"
        android:hint="Input your address"
        android:inputType="text"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seller_register_btn"
        android:layout_marginHorizontal="15dp"
        android:layout_below="@+id/seller_address"
        android:text="Register As Organizer"
        android:inputType="text"
        android:padding="10dp"
        app:backgroundTint="@null"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seller_to_login_btn"
        android:layout_marginHorizontal="15dp"
        android:layout_alignParentBottom="true"
        android:text="Already have an Account? Login"
        android:inputType="text"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        app:backgroundTint="@null"
        android:textColor="@color/black"
        android:background="@color/white"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        />



</RelativeLayout>